@model IEnumerable<CSharpJamApp.Models.Player>

@{
    ViewBag.Title = "FindPlayersByTeam";
}

<h2>Team Setup</h2>
<body style="background-color:blanchedalmond">
<style>
    img {
        width: 50px;
    }
</style>
<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Height)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight)
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in @Model)
    { 
    <tr>
        <td>
            <img src="@item.PictureUrl" style="width: 150px; height: auto;" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rating)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Height)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weight)
        </td>
        <td>
            @Html.ActionLink("Claim Player", "AddPlayer", routeValues: new { playerId = @item.Id }, htmlAttributes: new { @class="btn btn-info" })
            
        </td>
    </tr>
        }

    </table>
</body>